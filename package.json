{
  "name": "movies_backend",
  "version": "1.0.0",
  "description": "Back End server for the movies app",
  "main": "app.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test && jest --detectOpenHandles --forceExit --coverage",
    "testAuth": "cross-env NODE_ENV=test && jest --detectOpenHandles --forceExit ./src/tests/auth.test.ts",
    "testPost": "cross-env NODE_ENV=test && jest --detectOpenHandles --forceExit --runInBand ./src/tests/post.test.ts",
    "testUser": "cross-env NODE_ENV=test && jest --detectOpenHandles --forceExit --runInBand ./src/tests/user.test.ts",
    "start": "tsc && node ./dist/src/server.js",
    "dev": "nodemon ./src/server.ts",
    "prod": "cp .envprod .env && tsc -p tsconfig_prod.json && pm2 restart ecosystem.config.js --env production"
  },
  "author": "Roei Oren And Itay Marder",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "env-var": "^7.4.1",
    "eslint": "^8.55.0",
    "express": "^4.18.2",
    "google-auth-library": "^9.6.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.9",
    "@types/supertest": "^2.0.16",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  }
}